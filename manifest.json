{
  "manifest_version": 3,
  "name": "Mantis2Trello",
  "version": "1.0",
  "description": "",
  "permissions": [
    "declarativeContent",
    "tabs",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/Mantis2TrelloIcon16.png",
    "48": "icons/Mantis2TrelloIcon48.png",
    "128": "icons/Mantis2TrelloIcon128.png"
  },
  "action": {
    "default_icon": "icons/Mantis2TrelloIcon16.png",
    "default_title" : "Clique para criar um cart√£o Trello com este mantis."
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*mantis/view.php*",
        "*://*/view.php*"
      ],
      "js": [
        "src/jquery.3.7.1.min.js",
        "client.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}